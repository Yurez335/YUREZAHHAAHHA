<Window x:Class="WpfApp3.ProjectSources.Windows.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3.ProjectSources.Windows"
        mc:Ignorable="d"
        Title="AuthorizationWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        <Label FontFamily="Segoi UI" Content="Авторизация" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Margin="0 0 0 7" Orientation="Horizontal">
                <TextBlock Text="Введите пароль"/>
                <TextBox Width="130"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введите логин"/>
                <TextBox Margin="11 0 0 0" Width="130"/>
            </StackPanel>
        </StackPanel>
        <Button Grid.Row="2" Content="Войти" Click="Button_Click"/>
    </Grid>
</Window>
